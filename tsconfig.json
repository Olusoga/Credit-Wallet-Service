{
  "compilerOptions": {
      "lib": ["es6"],
      "types": [ "node", "express"],
      "allowJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "vendor/*"],
          "src/*": ["./src/*"]
      },
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es6",
      "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "node_modules/@types", "src/**/*.ts", "knexfile.ts"],
  "exclude": ["clients", "dist"]
}